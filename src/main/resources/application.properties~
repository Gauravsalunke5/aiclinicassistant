spring.application.name=AI Clinic Assistant

# PostgreSQL Database Configuration
spring.datasource.url=jdbc:postgresql://localhost:5432/ai_clinic_assistant_db
spring.datasource.username=ai_clinic_assistant_user
spring.datasource.password=secret
spring.datasource.driver-class-name=org.postgresql.Driver
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.hibernate.naming.physical-strategy=org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl

# Enable Debugging for Spring Boot
debug=true

# LangChain4j Configuration
langchain4j.open-ai.chat-model.api-key=${OPENAI_API_KEY}
langchain4j.open-ai.chat-model.model-name=gpt-3.5-turbo
langchain4j.open-ai.chat-model.log-requests=true
langchain4j.open-ai.chat-model.log-responses=true


# Logging Level for LangChain4j and related packages
logging.level.dev.langchain4j=INFO
logging.level.dev.ai4j.openai4j=INFO

# Spring Boot Logging Configuration (Optional)
logging.level.org.springframework.web=INFO
logging.level.org.hibernate=ERROR
